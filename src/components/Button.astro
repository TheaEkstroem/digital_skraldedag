---
//henter parametrene fra astro props
const {variant="primary", size="small"} = Astro.props;
 
//definere den stilling (Tailwind classes) der gør sig gældende fra alle knapper
const buttonStylling = "";

// definere den stilling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
    "primary": "px-4 py-0.5 bg-[#E7639B] rounded-2xl text-[#F8F5EE] hover:bg-[#F8F5EE] hover:text-[#E7639B] border-[#E7639B] border-2" ,
    "secondary":""  
};

//definere den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser
const sizeClasses = {
    "small": "text-sm",
    "medium": "text-mg",
    "large": "text-xl"
};
---

<button class:list={[buttonStylling, variantClasses[variant], sizeClasses[size]]}> <slot/> </button>

