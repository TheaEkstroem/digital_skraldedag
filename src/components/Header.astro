---
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<!-- Navigation -->
 <div class="mt-[100px] px-10">
<div
  x-data="{ showmenu: false }"
  class="px-10 py-2 fixed top-0 left-0 z-50 w-full bg-[#F8F5EE] border-[#1E1C1C] border-b-2"
>
  <!-- Desktop -->
  <div id="navbar" class="flex flex-row justify-between">
    <!-- Logo -->
    <div class="logo">
      <a href="/">
        <img
          class="w-[90px] h-[70px] object-fit"
          src="logo.webp"
          alt="Logo til digitalt skrald"
        />
      </a>
    </div>

    <!-- nav -->
    <nav
      id="desktopmenu"
      class="hidden md:flex md:flex-row md:items-center gap-20"
    >
      <ul class="flex flex-row gap-10">
        <li>
          <Link size="text-mg" variant="secondary" href="/hvordan"
            >Hvordan deltager man</Link
          >
        </li>
      </ul>
      <Link size="text-mg" variant="primary" href="/bidrag" class="ml-8"
        >Del dit bidrag</Link
      >
      <!-- dark mode knap -->
      <button class="grid bg-[#1E1C1C] p-1 w-16 rounded-full">
        <div class="bg-white rounded-full block w-min p-1 ml-auto">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="size-4"
          >
            <path
              fill-rule="evenodd"
              d="M7.455 2.004a.75.75 0 0 1 .26.77 7 7 0 0 0 9.958 7.967.75.75 0 0 1 1.067.853A8.5 8.5 0 1 1 6.647 1.921a.75.75 0 0 1 .808.083Z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
      </button>
    </nav>
    <!-- burgermenu -->
    <button
      id="burgermenu"
      class="md:hidden"
      x-on:click="showmenu = ! showmenu"
    >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10">
      <path fill-rule="evenodd" d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
    </svg>
    
    </button>
  </div>

  <!-- mobile view -->
  <nav
    id="mobilmenu"
    class="flex flex-col pt-6 bg-[#F8F5EE] w-full md:hidden"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="text-right no-underline">
      <li class="pb-3">
        <Link size="text-mg" variant="secondary" href="/hvordan"
          >Hvordan deltager man</Link>
      </li>
      <li class="">
        <Link size="text-mg" variant="secondary" href="/bidrag"
          >Del dit bidrag</Link>
      </li>
    </ul>
  </nav>
</div>

</div>




