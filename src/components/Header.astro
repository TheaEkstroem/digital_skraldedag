---
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---
<div
  x-data="{ showmenu: false }"
  class="px-10 py-8 fixed top-0 left-0 z-50 w-full bg-[#F8F5EE] shadow-sm lg:static lg:shadow-none"
>
  <!-- Desktop -->
  <div id="navbar" class="flex flex-row justify-between">
    <!-- Logo -->
    <div class="logo">
      <a href="/">
        <img
          class="w-[80px] h-[80px] object-cove"
          src="logo.webp"
          alt="Logo til digitalt skrald"
        />
      </a>
    </div>

    <!-- nav -->
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-8">
        <li class=""><Link size="text-mg" href="/hvordan">Hvordan</Link></li>
        <li class=""> <Link size="text-mg" href="/bidrag">Del dit bidrag</Link></li>
      </ul>
      <Button variant="primary" size="medium" href="/bidrag">
        Del dit bidrag</Button
      >
      
      <!-- Dark mode knap? -->
    </nav>
    <button
      id="burgermenu"
      class="lg:hidden"
      x-on:click="showmenu = ! showmenu"
    >
      Menu
    </button>
  </div>

  <!-- mobile view -->
  <nav
    id="mobilmenu"
    class="flex flex-col pt-4 bg-[#F8F5EE] w-full md:hidden"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="">
      <li class=""><Link size="text-mg" href="/hvordan">Hvordan</Link></li>
      <li class="">
        <Link size="text-mg" href="/bidrag">Del dit bidrag</Link>
      </li>
    </ul>
  </nav>
</div>
