---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant="primary", size="small"} = Astro.props; 
 
//definere den stilling (Tailwind classes) der gør sig gældende fra alle knapper
const linkStylling = "";

// definere den stilling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
    "primary": "px-4 py-0.5 bg-[#E7639B] rounded-xl text-[#F8F5EE] hover:drop-shadow-lg" ,
    "secondary": ""
};

//definere den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser
const sizeClasses = {
   "small": "text-sm",
    "medium": "text-mg",
    "large": "text-lg"
};
---

<a href={href} target={target} class:list={[linkStylling ,variantClasses[variant] ,sizeClasses[size]]}>
    <slot />
</a>